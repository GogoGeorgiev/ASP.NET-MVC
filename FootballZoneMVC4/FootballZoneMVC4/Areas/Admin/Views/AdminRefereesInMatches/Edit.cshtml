@model FootballZoneMVC4.DAL.RefereesMatch

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>RefereesMatch</legend>

        @Html.HiddenFor(model => model.RefereeID)

        @Html.HiddenFor(model => model.MatchID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Referee.RefereeNames)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Referee.RefereeNames)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FootballMatch.MatchID)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.FootballMatch.MatchID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RefereeKind)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RefereeKind)
            @Html.ValidationMessageFor(model => model.RefereeKind)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
