@model FootballZoneMVC4.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}
<head>

<meta charset=utf-8"/>
</head>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Използвай формата отдолу за да смениш твоята парола.</h2>
</hgroup>

<p class="message-info">
    Новата парола трябва да е минимум от @Membership.MinRequiredPasswordLength символа дължина.
</p>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Смяната на паролата беше неуспешна. Моля поправете грешките и опитайте отново.")

    <fieldset>
        <legend>Форма за смяна на паролата</legend>
        <ol>
            <li>
                Стара парола<br/>
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </li>
            <li>
                Нова парола<br/>
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </li>
            <li>
                Потвърди новата парола<br/>
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="Смени паролата" />
    </fieldset>
}
